
<div class="card bg-light shadow p-3 mb-5 bg-body rounded">
  <div class="card-body">
    <div class="text-center mb-4">
      <%= image_tag('profile.jpg', style: "border-radius:50%", size: "120x120") %>
      <h6 class="mt-3 mb-0"><%= current_user.name%></h6>
      <small><%= current_user.email%></small>
    </div>

    <ul class="nav  flex-column">
      <li class="nav-item">
        <a class="nav-link <%= 'activess' if request.path == account_settings_path %> "  aria-current="page" href="/account-settings"><i class="bi bi-person-square"></i> Personal Info</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= 'activess' if request.path == notifications_path %>" aria-current="page" href="/notifications"> <i class="bi bi-bell-fill"></i> Notifications <span class="badge bg-dark float-end text-white ms-1 rounded-pill">2</span></a>
      </li>
      <li class="nav-item ">
        <a class="nav-link <%= 'activess' if request.path == orders_path %>" aria-current="page" href="/orders" "><i class="bi bi-cart-fill"></i> My Orders</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" aria-current="page" href="#"><i class="bi bi-link-45deg"></i> Link</a>
      </li>
    </ul>
  </div>
</div>